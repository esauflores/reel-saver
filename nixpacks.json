{
  "language": "python",
  "entrypoint": "python run_app.py",
  "environment": {
    "FLASK_APP": "run_app.py",
    "FLASK_ENV": "development"
  },
  "python": {
    "version": "3.9",
    "requirementsPath": "requirements.txt"
  },
  "build": {
    "commands": [
      "pip install -r requirements.txt"
    ],
    "packages": [
      "ffmpeg"
    ]
  },
  "scripts": {
    "start": "flask run --host=0.0.0.0 --port=8000"
  }
}